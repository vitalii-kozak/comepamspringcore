<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleLogger" class="spring_core.loggers.ConsoleLogger"/>

    <bean id="fileLogger" class="spring_core.loggers.FileLogger" init-method="init">
        <constructor-arg value="log.txt"> </constructor-arg>
    </bean>

    <bean id="cacheFileLogger" class="spring_core.loggers.CacheFileLogger" destroy-method="destroy"
          init-method="init" parent="fileLogger">
        <constructor-arg value = "3" />
    </bean>

    <bean id="combinedLogger" class="spring_core.loggers.CombinedLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleLogger" />
                <ref bean="fileLogger" />
            </list>
        </constructor-arg>
    </bean>

</beans>