<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="spring_core.beans.Client">
    <constructor-arg index = "0" value = "1" />
    <constructor-arg index = "1" value = "John Smith" />
    </bean>

    <bean id="eventLogger" class="spring_core.loggers.ConsoleLogger"/>

    <bean id="app" class="spring_core.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="event" class="spring_core.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
    </bean>

    <bean id="fileEventLogger" class="spring_core.loggers.FileLogger" init-method="init">
        <constructor-arg value="log.txt"> </constructor-arg>
    </bean>

    <bean id="cacheFileEventLogger" class="spring_core.loggers.CacheFileLogger" destroy-method="destroy"
          init-method="init" parent="fileEventLogger">
        <constructor-arg value = "10" />
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance" />

</beans>